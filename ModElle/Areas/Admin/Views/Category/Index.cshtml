@model List<Category>
<div class="card shadow-0 mt-4">
    <div class="card-header bg-secondary bg-gradient bg-dark m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Liste des catégories</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
            <div class="row pb-3">
        <div class="col-6">
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i>
                CRÉER UNE NOUVELLE CATÉGORIE
            </a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Nom de la catégorie
        </th>
        <th>
            Quantité
        </th>
        <th>
          Détails
         </th>

    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder)){
        <tr>
            <td>@obj.Name</td>
            <td>@obj.DisplayOrder</td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp asp-controller="Category" asp-action="Edit"  asp-route-id="@obj.CategoryId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Modifier
                    </a>
                            <a asp asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId" class="btn btn-dark mx-2">
                                <i class="bi bi-trash"></i> Supprimer
                     </a>
                </div>
            </td>
        </tr>

        }
    </tbody>
</table>
        </div>
    </div>
