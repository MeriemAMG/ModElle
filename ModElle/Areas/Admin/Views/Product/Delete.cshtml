@model Product
<div class="card shadow-0 my-4">
    <div class="card-header bg-secondary bg-gradient bg-dark m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Supprimer la catégorie</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="form-floating py-2 col-12">
                <input asp-for="Title" disabled class="form-control border-0 shadow" />
                <label asp-for="Title" class="ms-2"></label>
                
            </div>

            <div class="form-floating py-2 col-12">
                <input asp-for="Description" disabled class="form-control border-0 shadow" />
                <label asp-for="Description" class="ms-2"></label>
                

            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="size" disabled class="form-control border-0 shadow" />
                <label asp-for="size" class="ms-2"></label>
                

            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ListPrice" disabled class="form-control border-0 shadow" />
                <label asp-for="ListPrice" class="ms-2"></label>
                

            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="color" disabled class="form-control border-0 shadow" />
                <label asp-for="color" class="ms-2"></label>
                

            </div>

            <div class="row pt-2">
                
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Supprimer@* Delete *@</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">Retour à la liste@* Back to List *@</a>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


