@page
@model ForgotPasswordModel

<div class="card shadow bg-dark border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2> Mot de passe oublié ?</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-8 ">
        <div class="row pt-6">
            <div class="col-md-6 mx-auto">
                    <div class="text-center text-white ">
                        <h2>Entrez votre adresse e-mail</h2>
                        <hr />
                        <div class="row">
                            <div class="col-md-">
                                <form method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                        <label asp-for="Input.Email" class="form-label"></label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <button type="submit" class="w-100 btn btn-lg btn-primary">Réinitialiser le mot de passe</button>
                                </form>
                            </div>
                        </div>
                    </div>
            </div>

        </div>
    </div>
    </div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
